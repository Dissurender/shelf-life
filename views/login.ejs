<%- include('partials/header') -%>

    <div class="hero min-h-screen bg-base-200 px-8">
      <div class="hero-content flex-col lg:flex-row-reverse">
        <div class="text-center lg:text-left px-4">
          <h1 class="text-5xl font-bold">Login now!</h1>
          <p class="py-6">Provident cupiditate voluptatem et in. Quaerat fugiat ut assumenda excepturi exercitationem quasi. In deleniti eaque aut repudiandae et a id nisi.</p>
        </div>

        <div class="mx-auto">
          <% if (locals.messages.errors) { %> 
            <% messages.errors.forEach( el => { %>
              <div class="alert alert-danger"><%= el.msg %></div>
            <% }) %> 
          <% } %> 
          <% if (locals.messages.info) { %> 
            <% messages.info.forEach( el => { %>
              <div class="alert alert-info"><%= el.msg %></div>
            <% }) %> 
          <% } %>
        </div>
      

        <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-base-100">
          <div class="card-body">
            <form action="/login" method="POST">
              <div class="form-control">
                <label class="label" for="inputEmail">
                  <span class="label-text">Email</span>
                </label>
                <input
                  type="email"
                  class="form-control input input-bordered"
                  id="inputEmail"
                  aria-describedby="emailHelp"
                  name="email"

                />
              </div>

              <div class="form-control">
                <label class="label" for="inputPassword">
                  <span class="label-text">Password</span>
                </label>
                <input
                  type="password"
                  class="form-control input input-bordered"
                  id="inputPassword"
                  name="password"

                />
                <label class="label">
                  <a href="#" class="label-text-alt link link-hover">Forgot password?</a>
                </label>
              </div>
              <div class="form-control mt-6">
                <button type="submit" class="btn btn-primary">Login</button>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>

  <%- include('partials/footer') -%>
  </body>
</html>