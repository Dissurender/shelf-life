<%- include('partials/header') -%>
<div class="container min-h-screen mx-auto">
    <% if (!!user) { %>
    <div class="collapse">
        <input type="checkbox" class="w-96 my-4" />
        <button
            class="btn btn-primary shadow-md text-lg font-medium collapse-title my-4 w-96"
        >
            Click to add a book
        </button>

        <div class="collapse-content w-1/2 z-10">
            <div class="bg-base-100 p-4">
                <form
                    action="/book/createBook"
                    enctype="multipart/form-data"
                    method="POST"
                    id="newPost"
                >
                    <div class="m-4">
                        <label for="title" class="form-label">Title</label>
                        <input
                            type="text"
                            class="form-control"
                            id="title"
                            name="title"
                        />
                    </div>

                    <div class="m-4">
                        <label for="author" class="form-label">Author</label>
                        <input
                            type="text"
                            class="form-control"
                            id="author"
                            name="author"
                        />
                    </div>

                    <div class="m-4">
                        <label for="author" class="form-label">pages</label>
                        <input
                            type="number"
                            min="0"
                            class="form-control"
                            id="pages"
                            name="pages"
                        />
                    </div>

                    <div class="rating gap-1 m-4">
                        <input
                            type="radio"
                            name="rating"
                            id="choice1"
                            value="1"
                            class="mask mask-heart bg-accent"
                        />
                        <input
                            type="radio"
                            name="rating"
                            id="choice2"
                            value="2"
                            class="mask mask-heart bg-accent"
                            checked
                        />
                        <input
                            type="radio"
                            name="rating"
                            id="choice3"
                            value="3"
                            class="mask mask-heart bg-accent"
                        />
                        <input
                            type="radio"
                            name="rating"
                            id="choice4"
                            value="4"
                            class="mask mask-heart bg-accent"
                        />
                        <input
                            type="radio"
                            name="rating"
                            id="choice5"
                            value="5"
                            class="mask mask-heart bg-accent"
                        />
                    </div>

                    <div class="m-4">
                        <textarea
                            name="desc"
                            id="desc"
                            class="textarea textarea-bordered"
                            placeholder="Summary"
                        ></textarea>
                    </div>

                    <button
                        type="submit"
                        class="btn btn-primary btn-active ml-4 mb-4"
                        id="createBtn"
                        value="submit"
                    >
                        Submit
                    </button>
                </form>
            </div>
        </div>
    </div>
    <% } %>

    <div class="mt-5 min-w-full">
        <ul class="list-unstyle w-full">
            <% for(let i = 0; i < 3; i++) {%>
            <li class="mt-5">
                <section class="text-black body-font">
                    <div
                        class="container card card-side rounded-md bg-secondary shadow-md w-3/4 max-w-4xl mx-auto h-64 sm:h-auto"
                    >
                        <div
                            class="bg-primary-content flex items-center mx-auto border-b sm:flex-row flex-col"
                        >
                            <div
                                class="h-full w-52 inline-flex items-center justify-center flex-shrink-0"
                            >
                                <img src="https://placeimg.com/220/320/arch" />
                            </div>
                            <div
                                class="flex-grow sm:text-left text-center mt-4 sm:mt-0 mx-8"
                            >
                                <h1
                                    class="text-black text-2xl title-font font-bold mb-2"
                                >
                                    Title
                                </h1>
                                <span class="leading-relaxed text-base"
                                    >Author</span
                                >
                                <p class="leading-relaxed text-base h-24">
                                    Lorem ipsum dolor sit amet consectetur
                                    adipisicing elit. Enim dolor totam nisi,
                                    quia cum omnis reprehenderit pariatur porro
                                    repellendus quibusdam id error esse
                                    obcaecati hic vero quo! Optio, ratione
                                    ipsum!
                                </p>

                                <div class="md:flex mt-2">
                                    <div class="w-1/2">
                                        <span>pages</span>
                                    </div>

                                    <div>
                                        <% for( let i = 0; i < 4; i++ ) { %>
                                        <span class="badge badge-info font-bold"
                                            >Badge <%- i+1 %></span
                                        >
                                        <% } %>
                                    </div>
                                </div>
                                <div
                                    class="md:flex justify-between items-center mt-6"
                                >
                                    <div class="rating rating-lg rating-half">
                                        <input
                                            type="radio"
                                            name="rating-10"
                                            class="rating-hidden"
                                        />
                                        <input
                                            type="radio"
                                            name="rating-10"
                                            class="bg-green-500 mask mask-star-2 mask-half-1"
                                        />
                                        <input
                                            type="radio"
                                            name="rating-10"
                                            class="bg-green-500 mask mask-star-2 mask-half-2"
                                        />
                                        <input
                                            type="radio"
                                            name="rating-10"
                                            class="bg-green-500 mask mask-star-2 mask-half-1"
                                            checked
                                        />
                                        <input
                                            type="radio"
                                            name="rating-10"
                                            class="bg-green-500 mask mask-star-2 mask-half-2"
                                        />
                                        <input
                                            type="radio"
                                            name="rating-10"
                                            class="bg-green-500 mask mask-star-2 mask-half-1"
                                        />
                                        <input
                                            type="radio"
                                            name="rating-10"
                                            class="bg-green-500 mask mask-star-2 mask-half-2"
                                        />
                                        <input
                                            type="radio"
                                            name="rating-10"
                                            class="bg-green-500 mask mask-star-2 mask-half-1"
                                        />
                                        <input
                                            type="radio"
                                            name="rating-10"
                                            class="bg-green-500 mask mask-star-2 mask-half-2"
                                        />
                                        <input
                                            type="radio"
                                            name="rating-10"
                                            class="bg-green-500 mask mask-star-2 mask-half-1"
                                        />
                                        <input
                                            type="radio"
                                            name="rating-10"
                                            class="bg-green-500 mask mask-star-2 mask-half-2"
                                        />
                                    </div>

                                    <a
                                        class="btn btn-sm btn-secondary inline-flex"
                                        >View book
                                        <svg
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            class="w-4 h-4 ml-2"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                d="M5 12h14M12 5l7 7-7 7"
                                            ></path>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </li>
            <% } %>
        </ul>
    </div>
</div>
<%- include('partials/footer') -%>
