<%- include('partials/header') -%>

<li class="mt-5">
  <section class="text-black body-font">
      <div
          class="container card card-side rounded-md bg-secondary border border-neutral-content shadow-md w-3/4 max-w-4xl mx-auto h-64 sm:h-auto"
      >
          <div
              class="bg-primary-content flex items-center mx-auto border-b sm:flex-row flex-col"
          >
              <div
                  class="h-full w-52 inline-flex items-center justify-center flex-shrink-0"
              >
                  <img src="https://placeimg.com/220/320/arch" />
              </div>
              <div
                  class="flex-grow sm:text-left text-center mt-4 sm:mt-0 mx-8"
              >
                  <h1
                      class="text-black text-2xl title-font font-bold mb-2"
                  >
                      Title
                  </h1>
                  <span class="leading-relaxed text-base"
                      >Author</span
                  >
                  <p class="leading-relaxed text-base h-24">
                      Lorem ipsum dolor sit amet consectetur
                      adipisicing elit. Enim dolor totam nisi,
                      quia cum omnis reprehenderit pariatur porro
                      repellendus quibusdam id error esse
                      obcaecati hic vero quo! Optio, ratione
                      ipsum!
                  </p>

                  <div class="md:flex mt-2">
                      <div class="w-1/2">
                          <span>pages</span>
                      </div>

                      <div>
                          <% for( let i = 0; i < 3; i++ ) { %>
                          <span class="badge badge-info font-bold"
                              >Badge <%- i+1 %></span
                          >
                          <% } %>
                      </div>
                  </div>
                  <div
                      class="md:flex justify-between items-center mt-6"
                  >
                      <div class="rating rating-lg rating-half">
                          <input
                              type="radio"
                              name="rating-10"
                              class="rating-hidden"
                          />
                          <input
                              type="radio"
                              name="rating-10"
                              class="bg-green-500 mask mask-star-2 mask-half-1"
                          />
                          <input
                              type="radio"
                              name="rating-10"
                              class="bg-green-500 mask mask-star-2 mask-half-2"
                          />
                          <input
                              type="radio"
                              name="rating-10"
                              class="bg-green-500 mask mask-star-2 mask-half-1"
                              checked
                          />
                          <input
                              type="radio"
                              name="rating-10"
                              class="bg-green-500 mask mask-star-2 mask-half-2"
                          />
                          <input
                              type="radio"
                              name="rating-10"
                              class="bg-green-500 mask mask-star-2 mask-half-1"
                          />
                          <input
                              type="radio"
                              name="rating-10"
                              class="bg-green-500 mask mask-star-2 mask-half-2"
                          />
                          <input
                              type="radio"
                              name="rating-10"
                              class="bg-green-500 mask mask-star-2 mask-half-1"
                          />
                          <input
                              type="radio"
                              name="rating-10"
                              class="bg-green-500 mask mask-star-2 mask-half-2"
                          />
                          <input
                              type="radio"
                              name="rating-10"
                              class="bg-green-500 mask mask-star-2 mask-half-1"
                          />
                          <input
                              type="radio"
                              name="rating-10"
                              class="bg-green-500 mask mask-star-2 mask-half-2"
                          />
                      </div>

                      <a
                          class="btn btn-sm btn-secondary inline-flex"
                          href="/post/:id"
                          >View book
                          <svg
                              fill="none"
                              stroke="currentColor"
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              class="w-4 h-4 ml-2"
                              viewBox="0 0 24 24"
                          >
                              <path
                                  d="M5 12h14M12 5l7 7-7 7"
                              ></path>
                          </svg>
                      </a>
                  </div>
              </div>
          </div>
      </div>
  </section>
</li>

<div class="flex justify-center">
  <a class="btn btn-primary" href="/feed">Return to Feed</a>
</div>
<%- include('partials/footer') -%>
